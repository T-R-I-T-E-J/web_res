# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=8080
API_PREFIX=api/v1

# Application URLs (REQUIRED for production)
APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000

# ============================================
# DATABASE CONFIGURATION
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=psci_admin
DB_PASSWORD=psci_secure_2025
DB_DATABASE=psci_platform

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=30000

# ============================================
# SECURITY CONFIGURATION
# ============================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Session & Cookie Secrets (REQUIRED for production)
SESSION_SECRET=your-super-secret-session-key-change-in-production
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting (REQUIRED for production)
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ============================================
# FILE UPLOAD CONFIGURATION
# ============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# AWS S3 Configuration (for file uploads)
AWS_REGION=ap-south-1
AWS_S3_BUCKET=psci-platform-uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ============================================
# PAYMENT GATEWAY
# ============================================
# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# ============================================
# EMAIL CONFIGURATION
# ============================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_SECURE=false

# Email Sender Info
EMAIL_FROM=noreply@psci.in
EMAIL_FROM_NAME=Para Shooting Committee of India

# SendGrid (Alternative to SMTP)
# SENDGRID_API_KEY=your-sendgrid-api-key

# ============================================
# CACHING & PERFORMANCE
# ============================================
# Redis Configuration (Optional but recommended for production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Cache Settings
CACHE_ENABLED=false
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# ============================================
# MONITORING & LOGGING
# ============================================
# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=30

# Error Tracking (Sentry)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# SMS NOTIFICATIONS (Optional)
# ============================================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================
# COMPLIANCE & GDPR
# ============================================
# Data Retention (in days)
AUDIT_LOG_RETENTION_DAYS=730
USER_DATA_RETENTION_DAYS=2555
FINANCIAL_DATA_RETENTION_DAYS=2555

# GDPR Settings
GDPR_ENABLED=true
ANONYMIZE_ON_DELETE=true
