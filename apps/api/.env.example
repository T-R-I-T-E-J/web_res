# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/para_shooting_db

# Application
NODE_ENV=development
PORT=4000
API_PREFIX=api/v1

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:3000

# Encryption (Phase-2 Security)
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-64-character-encryption-key-here

# Cookie Consent & Analytics (Frontend)
COOKIEYES_ID=your-cookieyes-id
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# File Upload
MAX_FILE_SIZE=5242880
# 5MB in bytes (5 * 1024 * 1024)

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Logging
LOG_LEVEL=debug
# Options: error, warn, info, debug, verbose

# Email (if implementing email features)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password
# SMTP_FROM=noreply@parashootingindia.org

# Redis (if implementing caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Cloudflare (optional, for additional security)
# CLOUDFLARE_API_KEY=your-cloudflare-api-key
# CLOUDFLARE_ZONE_ID=your-zone-id

# Production-specific (set these in .env.production)
# DATABASE_SSL=true
# SENTRY_DSN=your-sentry-dsn
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_S3_BUCKET=your-s3-bucket
